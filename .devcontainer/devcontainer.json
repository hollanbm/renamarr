{
    "$schema": "https://raw.githubusercontent.com/devcontainers/spec/main/schemas/devContainer.base.schema.json",
    "name": "poetry DevContainer",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "containerUser": "poetry",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "configureZshAsDefaultShell": true,
            "nonFreePackages": true,
            "username": "poetry"
        },
        "ghcr.io/devcontainers-contrib/features/zsh-plugins:0": {
            "plugins": "sudo git zsh-syntax-highlighting zsh-autosuggestions poetry poetry-env",
            "omzPlugins": "https://github.com/zsh-users/zsh-syntax-highlighting https://github.com/zsh-users/zsh-autosuggestions"
        },
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "mounts": [
        "source=${localEnv:HOME}/.ssh,target=/home/poetry/.ssh,type=bind,consistency=cached",
        "source=${localWorkspaceFolder}/.zsh_history,target=/home/poetry/.zsh_history,type=bind,consistency=cached"
    ],
    "postCreateCommand": "zsh -c 'poetry install --no-interaction --no-ansi --quiet && source $(poetry env info --path)/bin/activate'",
    "customizations": {
        "vscode": {
            "settings": {
                "files.eol": "\n",
                "editor.formatOnSave": true,
                "editor.defaultFormatter": "ms-python.black-formatter",
                "python.venvPath": "${workspaceFolder}/.venv",
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": {
                    "zsh": {
                        "path": "/usr/bin/zsh"
                    }
                }
            },
            "extensions": [
                "KevinRose.vsc-python-indent",
                "ms-python.black-formatter",
                "ms-python.debugpy",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "njpwerner.autodocstring",
                "VisualStudioExptTeam.vscodeintellicode"
            ]
        }
    }
}